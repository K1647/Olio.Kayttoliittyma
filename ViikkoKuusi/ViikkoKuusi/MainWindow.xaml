<Window x:Class="ViikkoKuusi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViikkoKuusi"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="200">
    <Grid>
        <StackPanel x:Name="checklist" HorizontalAlignment="Left" Height="82" Margin="10,10,0,0" VerticalAlignment="Top" Width="233">
            <CheckBox x:Name="milk" Content="Milk"/>
            <CheckBox x:Name="butter" Content="Butter"/>
            <CheckBox x:Name="beer" Content="Beer"/>
            <CheckBox x:Name="chicken" Content="Chicken"/>
            <CheckBox x:Name="lemonade" Content="Lemonade"/>
        </StackPanel>
        <Button x:Name="btnBuy" Content="Buy" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="34" Click="btnBuy_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="76" Margin="10,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="172"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,135,0,0" TextWrapping="Wrap" Text="Shopping List:" VerticalAlignment="Top"/>

    </Grid>
</Window>
